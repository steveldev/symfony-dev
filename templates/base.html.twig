<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Symfony-dev{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}



    </head>
    <body>
        {% block body %}
        <header>
            <nav>
                <ul>              
                    {% if app.user %}
                        <li><a href="{{ path('app_logout') }}" title="Logout">Logout</a></li>
                    {% else %}
                        <li><a href="{{ path('app_register') }}" title="Login">Sign in</a></li>
                        <li><a href="{{ path('app_login') }}" title="Login">Login</a></li>
                    {% endif %}
                </ul>
            </nav>
        </header>
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </body>
</html>
